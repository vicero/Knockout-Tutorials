<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>My ASP.NET Web Page - @Page.Title</title>
        <link href="@Href("~/Styles/Site.css")" rel="stylesheet" />
        <link href="@Href("~/favicon.ico")" rel="shortcut icon" type="image/x-icon" />
        <script type="text/javascript" src="jquery.min.js"></script>
        <script type="text/javascript" src="jquery.validate.min.js"></script>
        <script type="text/javascript" src="knockout-2.0.0.js"></script>
        <script type="text/javascript">
            $(function() {
                @RenderSection("script")
            });
        </script>
    </head>
    <body>
        @RenderSection("templates")
        <div id="page">
            <div id="header">
                <p class="site-title">My ASP.NET Web Page</p>
                <ul id="menu">
                    <li><a href="@Href("~/")">Home</a></li>
                </ul>
            </div>
            <div id="main">
                <div id="content">
                    <h1>@Page.Title</h1>
                    @RenderBody()
                </div>
                <div id="footer">
                    &copy; @DateTime.Now.Year - My ASP.NET Web Page
                </div>
            </div>
        </div>
        <script type="text/javascript">
            "use strict";
            @RenderSection("viewModel")
        </script>
    </body>
</html>